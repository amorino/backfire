size($width, $height = $width)
  width: $width
  height: $height

center($type = both){
  position: absolute
  if ($type == 'vertical'){
    top: 50%
    transform: translateY(-50%)
  } else if ($type == 'horizontal') {
    left: 50%
    transform: translateX(-50%)
  } else {
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
  }
}

inline-block()
  display: inline-block
  *display: inline
  *zoom: 1
