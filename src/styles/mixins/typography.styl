word-wrap()
  word-wrap: arguments
  -ms-word-wrap: arguments

text-justify()
  text-justify: arguments
  -ms-text-justify: arguments

hyphens()
  -webkit-hyphens: arguments
  -moz-hyphens: arguments
  -ms-hyphens: arguments
  hyphens: arguments

ellipsis(no-wrap = true)
  if no-wrap
    white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

font-smoothing() {
  if current-property {
    -webkit-{current-property}: arguments
    if arguments == antialiased {
      -moz-osx-{current-property}: grayscale
    } else if arguments == subpixel-antialiased {
      -moz-osx-{current-property}: auto
    }
    {current-property}: arguments
  } else {
    error('font-smoothing() must be used within a property');
  }
}
