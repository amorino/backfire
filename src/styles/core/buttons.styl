@import '../vars'

button
  border: none
  padding: 0
  margin 0
  cursor: pointer
  font-family: inherit
  border-radius: 0

.Button
  background: $black
  color $white
  padding: 7px 20px
  transition background 0.5s ease-in-out-circ
  margin-left: 15px
  &:first-of-type
    margin-left 0
  &:focus
    background: rgba($black, 0.8)
  &:hover
    background: rgba($black, 0.9)
a
  text-decoration: none
