{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      arrowFunctions: true
    }
  },
  "rules": {
    "comma-dangle": 0,
    "no-console": 0,
    "max-len": 0,
    "prefer-template": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "react/prefer-stateless-function": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/webpack.test.babel.js"
      }
    }
  }
}
