{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      arrowFunctions: true
    }
  },
  "rules": {
    "comma-dangle": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "object-curly-spacing": [2, "never"],
    "no-console": 0,
    "max-len": 0,
    "prefer-template": 0,
    "no-use-before-define": 0,
    "newline-per-chained-call": 0,
    "arrow-body-style": 0,
    "react/jsx-closing-bracket-location": 1,
    "react/jsx-indent-props": 1,
    "react/jsx-indent": [2, 2],
    "react/prop-types": 0,
    "react/jsx-no-bind": [2, {"ignoreRefs": false, "allowArrowFunctions": true, "allowBind": false}],
  }
}
