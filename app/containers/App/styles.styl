@import '~styles/mixins'
@import '~styles/vars'
@lost gutter 60px
@lost cycle none

@font-face
  font-family: 'BrandonText'
  font-path: 'assets/fonts/BrandonText-Medium_gdi'
  font-style: normal
  font-weight: 400

html,
body
  background: $background
  color: $color
  size: 100%

body
  font-family: $font
  font-smoothing: antialiased
  overflow: hidden

a
  text-decoration: none
  color: $color

.container
  position: absolute
  width: 100%

.wrapper
  lost-center: $center

.route
  size 100%
  overflow: hidden
